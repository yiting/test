    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@types/archiver": "^2.1.3",
    "@types/fs-extra": "^5.0.5",
    "@types/jest": "^24.0.11",
    "@types/koa": "^2.0.45",
    "@types/koa-bodyparser": "^4.2.0",
    "@types/koa-router": "^7.0.27",
    "@types/node": "^9.6.5",
    "@types/request": "^2.48.1",
