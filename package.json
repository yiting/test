    "jest": "^24.7.1",
    "lint-staged": "^8.1.5",
    "prettier": "1.16.4",
    "ts-jest": "^24.0.1",
    "typescript": "^3.4.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
